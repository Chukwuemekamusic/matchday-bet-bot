# ============ Required Configuration ============

# Towns Protocol bot credentials (base64-encoded JSON from Towns dashboard)
APP_PRIVATE_DATA=your_app_private_data_here

# Secret for webhook authentication (generate a random string)
JWT_SECRET=your_jwt_secret_here

# Football-Data.org API key (required for match data)
# Get your free API key at: https://www.football-data.org/client/register
FOOTBALL_API_KEY=your_football_api_key_here

# ============ Smart Contract Configuration ============

# Deployed MatchDayBet contract address on Base (required for betting functionality)
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Base L2 RPC URL (defaults to public endpoint if not set)
BASE_RPC_URL=https://mainnet.base.org

# ============ Server Configuration ============

# HTTP server port (Render will use this port for health checks and webhooks)
PORT=5123

# ============ Database Configuration ============

# SQLite database file path
# For Render deployment with persistent disk, set to: /data/matchday.db
# For local development, use: ./data/matchday.db
DATABASE_PATH=./data/matchday.db

# ============ Betting Limits ============

# Minimum bet amount in ETH
MIN_STAKE=0.001

# Maximum bet amount in ETH
MAX_STAKE=0.1

# ============ Match Data Configuration ============

# Comma-separated list of Football-Data.org competition IDs
# PL=2021, La Liga=2014, Bundesliga=2002, Serie A=2019, Ligue 1=2015, UCL=2001
SUPPORTED_COMPETITIONS=2021,2014,2002,2019,2015,2001

# ============ Towns Protocol Configuration ============

# Optional: Default channel ID for automated match announcements
# Get this from your Towns channel settings
DEFAULT_CHANNEL_ID=

# ============ Admin Configuration ============

# Your Ethereum address (0x...) - used for admin-only commands like /resolve
ADMIN_USER_ID=

# Subgraph URL for querying on-chain betting data
SUBGRAPH_URL=https://api.studio.thegraph.com/query/122239/matchdaybet-v-2/v0.1
